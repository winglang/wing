{
  "name": "@monadahq/winglang",
  "devDependencies": {
    "@nxrs/cargo": "^0.3.3",
    "nx": "14.8.0"
  },
  "scripts": {
    "nx": "nx",
    "build": "nx run-many --target=build --all=true",
    "test": "nx run-many --target=test --all=true",
    "postinstall": "npm run install:vscode-wing && npm run install:wing-api-checker && npm run install:wing-playground && npm run install:wing && npm run install:wingsdk",
    "install:vscode-wing": "npm --prefix apps/vscode-wing install",
    "install:wing-api-checker": "npm --prefix apps/wing-api-checker install",
    "install:wing-playground": "npm --prefix apps/wing-playground install",
    "install:wing": "npm --prefix apps/wing install",
    "install:wingsdk": "npm --prefix libs/wingsdk install"
  }
}
