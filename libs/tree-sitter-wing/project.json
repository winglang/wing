{
  "name": "tree-sitter-wing",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "test": {
      "options": {
        "command": "pnpm run test:update",
        "cwd": "libs/tree-sitter-wing"
      },
      "configurations": {
        "release": {
          "command": "pnpm run test"
        }
      }
    },
    "build": {
      "options": {
        "command": "cargo wasi build",
        "cwd": "libs/tree-sitter-wing"
      },
      "configurations": {
        "release": {
          "command": "cargo wasi build --release"
        }
      }
    },
    "dev": {
      "options": {
        "command": "pnpm run playground",
        "cwd": "libs/tree-sitter-wing"
      }
    },
    "dev:watch": {
      "options": {
        "command": "pnpm run playground:watch",
        "cwd": "libs/tree-sitter-wing"
      }
    }
  }
}
