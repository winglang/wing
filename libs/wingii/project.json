{
  "name": "wingii",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "test": {
      "dependsOn": ["lint"],
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo test",
        "cwd": "libs/wingii"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cargo fmt",
          "cargo clippy --fix --no-deps --target wasm32-wasi --release"
        ],
        "cwd": "libs/wingii",
        "parallel": false
      },
      "configurations": {
        "release": {
          "commands": [
            "cargo fmt --check",
            "cargo clippy --no-deps --target wasm32-wasi --release"
          ]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["rust-target"],
      "options": {
        "command": "cargo wasi build",
        "cwd": "libs/wingii"
      },
      "configurations": {
        "release": {
          "command": "cargo wasi build --release"
        }
      }
    }
  }
}
