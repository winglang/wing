{
  "name": "wingii",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "test": {
      "dependsOn": ["lint"],
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo test",
        "cwd": "libs/wingii"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy",
        "cwd": "libs/wingii"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["rust-target"],
      "options": {
        "command": "cargo wasi build",
        "cwd": "libs/wingii"
      },
      "configurations": {
        "release": {
          "command": "cargo wasi build --release"
        }
      }
    }
  }
}
