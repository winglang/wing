{
  "name": "sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["wing-api-checker", "jsii-docgen"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npm run projen",
          "npm run pre-compile",
          "npm run compile",
          "npm run post-compile"
        ],
        "cwd": "libs/wingsdk",
        "parallel": false
      }
    },
    "test": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm run test"],
        "cwd": "libs/wingsdk",
        "parallel": false
      }
    },
    "package": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm run bump", "npm pack", "npm run unbump"],
        "cwd": "libs/wingsdk",
        "parallel": false
      }
    }
  }
}
