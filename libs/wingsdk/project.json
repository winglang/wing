{
  "name": "sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["wing-api-checker", "jsii-docgen"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm run pre-compile", "npm run compile", "npm run api-check"],
        "cwd": "libs/wingsdk",
        "parallel": false
      }
    },
    "package": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm run bump", "npm pack", "npm run unbump"],
        "cwd": "libs/wingsdk",
        "parallel": false
      }
    }
  }
}
