{
  "name": "wingc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["sdk", "wingii", "tree-sitter-wing"],
  "targets": {
    "test": {
      "dependsOn": ["lint"],
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo test",
        "cwd": "libs/wingc"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["cargo fmt", "cargo clippy --no-deps --fix --allow-dirty"],
        "cwd": "libs/wingc",
        "parallel": false
      },
      "configurations": {
        "release": {
          "commands": ["cargo fmt --check", "cargo clippy --no-deps --release"]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/target/wasm32-wasi/debug/wingc.wasm",
        "{workspaceRoot}/target/wasm32-wasi/release/wingc.wasm"
      ],
      "options": {
        "command": "cargo wasi build",
        "cwd": "libs/wingc"
      },
      "configurations": {
        "release": {
          "command": "cargo wasi build --release"
        }
      }
    },
    "dev": {
      "dependsOn": ["^build", "build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo run --example compile",
        "cwd": "libs/wingc"
      },
      "configurations": {
        "release": {
          "command": "cargo run --release --example compile"
        }
      }
    }
  }
}
