{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "defaultProject": "winglang",
  "npmScope": "winglang",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "namedInputs": {
    "src": [
      "{projectRoot}/src/**/*"
    ],
    "project-files": [
      "{projectRoot}/*"
    ],
    "workspace-files": [
      "{workspaceRoot}/*"
    ],
    "test": [
      "{projectRoot}/test/**/*"
    ],
    "examples-tests": [
      "{workspaceRoot}/examples/tests/**/*.w"
    ],
    "rust-target": [
      "{workspaceRoot}/target/**"
    ],
    "dist": [
      "{projectRoot}/dist/**/*"
    ]
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "copy",
          "test",
          "lint",
          "package"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "inputs": [
        "project-files",
        "workspace-files",
        "src"
      ],
      "outputs": [
        "{workspaceRoot}/dist"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "inputs": [
        "project-files",
        "workspace-files",
        "src",
        "test",
        "examples-tests"
      ]
    },
    "lint": {
      "inputs": [
        "project-files",
        "workspace-files",
        "src",
        "test"
      ]
    }
  }
}
