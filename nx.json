{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "defaultProject": "winglang",
  "npmScope": "winglang",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "namedInputs": {
    "default": [
      "!{projectRoot}/node_modules/**",
      "{workspaceRoot}/.cargo/**",
      "{workspaceRoot}/.vscode/**",
      "!{workspaceRoot}/README.md",
      "!{projectRoot}/README.md",
      "{workspaceRoot}/*",
      "{projectRoot}/**/*"
    ],
    "exclude-tests": [
      "!{projectRoot}/test/**",
      "!{projectRoot}/**/*.test.*"
    ],
    "default-build": [
      "default",
      "exclude-tests"
    ],
    "default-test": [
      "default",
      "examples-tests"
    ],
    "examples-tests": [
      "{workspaceRoot}/examples/tests/**/*.w"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "inputs": [
        "default-build",
        "^default-build"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "inputs": [
        "^default-build",
        "default-test"
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "inputs": [
        "default"
      ]
    },
    "package": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "inputs": [
        "default-build",
        "^default-build"
      ]
    },
    "dev": {
      "dependsOn": ["build", "^build"],
      "executor": "nx:run-commands",
      "inputs": [
        "default-build",
        "^default-build"
      ]
    },
    "copy": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "inputs": [
        "^default-build"
      ]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "copy",
          "test",
          "lint",
          "package",
          "generate"
        ]
      }
    }
  }
}
