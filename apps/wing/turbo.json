{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "pipeline": {
    "test": {
      "inputs": [
        "*.ts",
        "*.json",
        "src/**",
        "test/**",
        "../../examples/tests/**",
        "!../../examples/**/target/**",
        "!../../examples/node_modules/**"
      ],
      "dependsOn": ["examples-valid#topo"]
    },
    "compile": {
      "outputs": ["dist/**"]
    }
  }
}
