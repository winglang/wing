{
  "name": "winglang",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": [
    "wingc",
    "sdk"
  ],
  "targets": {
    "copy": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "^build"
      ],
      "inputs": ["{workspaceRoot}/target/wasm32-wasi/debug/wingc.wasm", "{workspaceRoot}/target/wasm32-wasi/release/wingc.wasm"],
      "outputs": ["{projectRoot}/wingc.wasm"],
      "options": {
        "command": "cp -v ../../target/wasm32-wasi/debug/wingc.wasm ./",
        "cwd": "apps/wing"
      },
      "configurations": {
        "release": {
          "command": "cp -v ../../target/wasm32-wasi/release/wingc.wasm ./"
        }
      }
    },
    "build": {
      "executor": "nx:run-script",
      "dependsOn": [
        "^build",
        "copy"
      ],
      "options": {
        "script": "build"
      }
    },
    "test": {
      "executor": "nx:run-script",
      "dependsOn": [
        "build",
        "copy"
      ],
      "options": {
        "script": "test"
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "commands": ["npx patch-package", "npm run bump", "npm pack", "npm run unbump"],
        "cwd": "apps/wing",
        "parallel": false
      }
    },
    "wing": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "./bin/wing",
        "cwd": "apps/wing"
      }
    }
  }
}
