{
  "name": "winglang",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["wingc", "sdk", "compiler"],
  "targets": {
    "build": {
      "dependsOn": ["^build"],
      "options": {
        "command": "npm run build",
        "cwd": "apps/wing"
      }
    },
    "test": {
      "dependsOn": ["^build"],
      "options": {
        "command": "npm run test",
        "cwd": "apps/wing"
      }
    },
    "package": {
      "options": {
        "commands": ["npm run bump", "npm pack", "npm run unbump"],
        "cwd": "apps/wing",
        "parallel": false
      }
    },
    "wing": {
      "dependsOn": ["build", "^build"],
      "executor": "nx:run-commands",
      "inputs": ["default-build", "^default-build"],
      "options": {
        "command": "./bin/wing",
        "cwd": "apps/wing"
      }
    }
  }
}
