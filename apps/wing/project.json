{
  "name": "winglang",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["wingc", "sdk"],
  "targets": {
    "copy": {
      "options": {
        "command": "cp -v ../../target/wasm32-wasi/debug/wingc.wasm ./",
        "cwd": "apps/wing"
      },
      "configurations": {
        "release": {
          "command": "cp -v ../../target/wasm32-wasi/release/wingc.wasm ./"
        }
      }
    },
    "build": {
      "dependsOn": ["^build", "copy"],
      "options": {
        "command": "npm run build",
        "cwd": "apps/wing"
      }
    },
    "test": {
      "options": {
        "command": "npm run test",
        "cwd": "apps/wing"
      }
    },
    "package": {
      "options": {
        "commands": [
          "npx patch-package",
          "npm run bump",
          "npm pack",
          "npm run unbump"
        ],
        "cwd": "apps/wing",
        "parallel": false
      }
    },
    "wing": {
      "dependsOn": ["build", "^build"],
      "executor": "nx:run-commands",
      "inputs": ["default-build", "^default-build"],
      "options": {
        "command": "./bin/wing",
        "cwd": "apps/wing"
      }
    }
  }
}
