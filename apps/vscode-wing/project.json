{
  "name": "vscode-wing",
  "implicitDependencies": [
    "wing-language-server"
  ],
  "targets": {
    "copy": {
      "executor": "nx:run-commands",
      "inputs": [
        "rust-native"
      ],
      "dependsOn": [
        "^build",
        "^build-native"
      ],
      "options": {
        "commands": [
          "mkdir -p ./resources/native",
          "cp ../../target/debug/wing-language-server ./resources/native"
        ],
        "cwd": "apps/vscode-wing"
      },
      "configurations": {
        "release": {
          "commands": [
            "echo 'Skipping wls copy. Get binaries from CI'"
          ]
        }
      }
    },
    "build": {
      "executor": "nx:run-script",
      "dependsOn": [
        "^build",
        "copy"
      ],
      "options": {
        "cwd": "apps/vscode-wing",
        "script": "build"
      }
    },
    "build-multi": {
      "executor": "nx:run-script",
      "options": {
        "cwd": "apps/vscode-wing",
        "script": "build"
      }
    }
  }
}
