{
  "name": "wing-playground",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": [
    "wingc"
  ],
  "targets": {
    "copy": {
      "executor": "nx:run-commands",
      "inputs": [
        "rust-wasm"
      ],
      "dependsOn": [
        "^build-wasm"
      ],
      "outputs": [
        "{projectRoot}/wingc.wasm"
      ],
      "options": {
        "command": "cp ../../target/wasm32-wasi/debug/wingc.wasm ./",
        "cwd": "apps/wing-playground"
      },
      "configurations": {
        "release": {
          "command": "cp ../../target/wasm32-wasi/release/wingc.wasm ./"
        }
      }
    },
    "build": {
      "executor": "nx:run-script",
      "dependsOn": [
        "copy",
        "^build"
      ],
      "options": {
        "cwd": "apps/wing-playground",
        "script": "build"
      }
    }
  }
}
