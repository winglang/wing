{
  "name": "wing-language-server",
  "targets": {
    "build-native": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo build",
        "cwd": "apps/wing-language-server"
      },
      "configurations": {
        "release": {
          "command": "cargo build --release"
        }
      }
    },
    "test": {
      "executor": "@nxrs/cargo:test"
    },
    "build-wasm": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo wasi build",
        "cwd": "apps/wing-language-server"
      },
      "configurations": {
        "release": {
          "command": "cargo wasi build --release"
        }
      }
    }
  }
}
