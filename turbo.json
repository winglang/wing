{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "*.json",
    "*.toml",
    ".node-version",
    "insta.yaml",
    ".github/workflows/build.yml",
    "scripts/*",
    "patches/*",
    "tools/bump-pack/**",
    "!tools/bump-pack/node_modules/**"
  ],
  "pipeline": {
    "default": {
      "inputs": ["*.json", ".projenrc.ts"]
    },
    "compile": {
      "dependsOn": ["^compile"],
      "inputs": [
        "bin/*",
        "*.ts",
        "*.js",
        "*.cjs",
        "*.json",
        "*.toml",
        "*.lock",
        "src/**/*.rs",
        "!src/**/*.test.ts",
        "src/**/*.ts"
      ]
    },
    "test": {
      "dependsOn": ["compile"],
      "inputs": [
        "*.ts",
        "*.js",
        "*.cjs",
        "*.json",
        "*.toml",
        "*.lock",
        "src/**/*.rs",
        "src/**/*.ts",
        "src/**/*.test.ts",
        "test/**"
      ],
      "outputs": ["**/__snapshots__/**", "**/*.snap"]
    },
    "test:playwright": {
      "dependsOn": ["compile"],
      "inputs": [
        "*.ts",
        "*.js",
        "*.cjs",
        "*.json",
        "*.toml",
        "*.lock",
        "src/**",
        "test/**"
      ]
    },
    "post-compile": {
      "inputs": [""],
      "dependsOn": ["compile"]
    },
    "lint": {
      "inputs": [
        "*.ts",
        "*.js",
        "*.cjs",
        "*.json",
        "*.toml",
        "*.lock",
        "src/**/*.rs",
        "src/**/*.ts",
        "test/**"
      ]
    },
    "eslint": {
      "inputs": [
        "*.ts",
        "*.js",
        "*.cjs",
        "*.json",
        "*.toml",
        "*.lock",
        "src/**/*.rs",
        "src/**/*.ts",
        "test/**"
      ]
    },
    "package": {
      "dependsOn": ["compile", "post-compile"],
      "env": ["PROJEN_BUMP_VERSION"],
      "inputs": ["*.md", "LICENSE"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
