{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "compile": {
      "dependsOn": ["^compile"],
      "inputs": ["src/**"]
    },
    "test": {
      "dependsOn": ["compile"],
      "inputs": ["src/**", "test/**"]
    },
    "post-compile": {
      "dependsOn": ["compile"],
      "cache": false
    },
    "lint": {
      "inputs": ["src/**"]
    },
    "eslint": {
      "inputs": ["src/**"]
    },
    "package": {
      "dependsOn": ["compile", "post-compile"],
      "cache": false
    }
  }
}
