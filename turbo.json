{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "*.json",
    "*.toml",
    ".node-version",
    "insta.yaml",
    ".github/workflows/build.yml",
    "scripts/*",
    "patches/*"
  ],
  "pipeline": {
    "default": {
      "inputs": ["*.json", ".projenrc.ts"]
    },
    "compile": {
      "dependsOn": ["^compile"],
      "inputs": [
        "bin/*",
        "*.ts",
        "*.js",
        "*.cjs",
        "*.json",
        "*.toml",
        "*.lock",
        "src/**/*.rs",
        "!src/**/*.test.ts",
        "src/**/*.ts"
      ]
    },
    "test": {
      "dependsOn": ["compile"],
      "inputs": [
        "*.ts",
        "*.js",
        "*.cjs",
        "*.json",
        "*.toml",
        "*.lock",
        "src/**/*.rs",
        "src/**/*.ts",
        "src/**/*.test.ts",
        "test/**"
      ]
    },
    "test:playwright": {
      "dependsOn": ["compile"],
      "inputs": [
        "*.ts",
        "*.js",
        "*.cjs",
        "*.json",
        "*.toml",
        "*.lock",
        "src/**",
        "test/**"
      ]
    },
    "post-compile": {
      "inputs": [""],
      "dependsOn": ["compile"]
    },
    "lint": {
      "inputs": [
        "*.ts",
        "*.js",
        "*.cjs",
        "*.json",
        "*.toml",
        "*.lock",
        "src/**/*.rs",
        "src/**/*.ts",
        "test/**"
      ]
    },
    "eslint": {
      "inputs": [
        "*.ts",
        "*.js",
        "*.cjs",
        "*.json",
        "*.toml",
        "*.lock",
        "src/**/*.rs",
        "src/**/*.ts",
        "test/**"
      ]
    },
    "package": {
      "dependsOn": ["compile", "post-compile"],
      "env": ["PROJEN_BUMP_VERSION"],
      "inputs": [""]
    },
    "hangar": {
      "dependsOn": ["hangar#test"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "examples-tests": {
      "dependsOn": ["topo"],
      "inputs": [
        "examples/tests/**",
        "!examples/tests/valid/**/node_modules/**",
        "!examples/tests/valid/**/target/**"
      ]
    },
    "test:generate": {
      "dependsOn": ["topo"]
    }
  }
}
